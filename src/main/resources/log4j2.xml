<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="log-dir">${sys:logRoot:-/tmp/logs/com.doubleknd26.macro}</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <RollingFile name="ErrorLogAppender" fileName="${log-dir}/error.log"
                     filePattern="${log-dir}/error-%d{HH}0000-%i"
                     immediateFlush="false"
                     bufferSize="10000">
            <PatternLayout pattern="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX}{GMT} %p [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <RollingFile name="RollingFile" fileName="${log-dir}/com.doubleknd26.macro.log"
                     filePattern="${log-dir}/com.doubleknd26.macro-%d{HH}0000-%i"
                     immediateFlush="false"
                     bufferSize="10000">
            <PatternLayout pattern="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX}{GMT} %-5level [%t] %logger{36} - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

    </Appenders>
    <Loggers>
        <asyncRoot level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile" />
            <AppenderRef ref="ErrorLogAppender" level="error"/>
        </asyncRoot>
    </Loggers>
</Configuration>